generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id            Int        @default(autoincrement()) @id
  orderSetId    Int
  membershipId  Int
  symbol        String
  side          OrderSide
  lastTimestamp DateTime?
  createdAt     DateTime   @default(now())
  orderType     OrderType?
  price         Float?
  stopPrice     Float?
  quantity      Float?
  orderSet      OrderSet   @relation(fields: [orderSetId], references: [id])
}

model OrderSet {
  id          Int        @default(autoincrement()) @id
  description String?
  groupId     Int
  createdAt   DateTime   @default(now())
  orderType   OrderType?
  price       Float?
  stopPrice   Float?
  percent     Float?
  side        OrderSide?
  orders      Order[]
}

enum OrderSide {
  BUY
  SELL
}

enum OrderType {
  LIMIT
  MARKET
}
